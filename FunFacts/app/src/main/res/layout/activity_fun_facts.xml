<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:padding="50dp"
    tools:context="com.thiagogorgulho.funfacts.FunFactsActivity">

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/funfacts_title"
        android:textColor="@color/TranslucidWhite"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/FunFacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/funfacts_facts_1"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/ButtonFacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:text="@string/funfacts_button"
        android:textSize="18sp" />

</RelativeLayout>
